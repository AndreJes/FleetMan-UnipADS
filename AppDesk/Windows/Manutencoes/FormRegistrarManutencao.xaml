<Window x:Class="AppDesk.Windows.Manutencoes.FormRegistrarManutencao"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:uc="clr-namespace:AppDesk.UserControls"
        xmlns:local="clr-namespace:AppDesk.Windows.Manutencoes"
        mc:Ignorable="d"
        Title="Registrar Manutenção" Height="600" Width="550">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="8*"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>

        <Label Grid.Row="0" Style="{StaticResource MainLabelStyle}" FontSize="20">
            REGISTRAR NOVA MANUTENÇÃO
        </Label>

        <Grid Grid.Row="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="8*"/>
            </Grid.RowDefinitions>

            <GroupBox Header="Tipo de Manutenção">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="1*"/>
                        <ColumnDefinition Width="1*"/>
                    </Grid.ColumnDefinitions>

                    <RadioButton x:Name="PreventivaRadioButton" Grid.Column="0" GroupName="TipoManutencaoGroup" HorizontalAlignment="Center" VerticalAlignment="Center">Preventiva</RadioButton>
                    <RadioButton x:Name="CorretivaRadioButton" Grid.Column="1" GroupName="TipoManutencaoGroup" HorizontalAlignment="Center" VerticalAlignment="Center">Corretiva</RadioButton>
                </Grid>
            </GroupBox>

            <TabControl Grid.Row="1">
                <TabItem Header="Local / Responsável">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="1*"/>
                            <RowDefinition Height="1*"/>
                        </Grid.RowDefinitions>

                        <GroupBox Header="Local" Grid.Row="0">
                            <uc:EnderecoUserControl x:Name="EnderecoUC"/>
                        </GroupBox>

                        <GroupBox Header="Responsável" Grid.Row="1">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="1*"/>
                                    <RowDefinition Height="1*"/>
                                </Grid.RowDefinitions>

                                <StackPanel Grid.Row="0" Style="{StaticResource MainStackPanelStyle}">
                                    <Label Style="{StaticResource MainLabelStyle}">
                                        Nome
                                    </Label>
                                    <TextBox x:Name="NomeResponsavelTextBox" Style="{StaticResource MainTextBoxStyle}" Width="200">

                                    </TextBox>
                                </StackPanel>

                                <StackPanel Grid.Row="1" Style="{StaticResource MainStackPanelStyle}">
                                    <Label Style="{StaticResource MainLabelStyle}">
                                        CPF / CNPJ
                                    </Label>
                                    <TextBox x:Name="CPFCNPJResponsavelTextBox" Style="{StaticResource MainTextBoxStyle}" Width="175">

                                    </TextBox>
                                </StackPanel>
                            </Grid>
                        </GroupBox>

                    </Grid>
                </TabItem>
                <TabItem Header="Veiculo / Data">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="1*"/>
                            <RowDefinition Height="1*"/>
                        </Grid.RowDefinitions>

                        <GroupBox Grid.Row="0" Header="Veiculo">
                            <uc:SelecaoVeiculoUserControl x:Name="VeiculosUC"/>
                        </GroupBox>

                        <GroupBox Grid.Row="1" Header="Data">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="1*"/>
                                    <RowDefinition Height="1*"/>
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="1*"/>
                                    <ColumnDefinition Width="2*"/>
                                </Grid.ColumnDefinitions>
                                <StackPanel Grid.Row="0" Grid.ColumnSpan="2" Style="{StaticResource MainStackPanelStyle}">
                                    <Label Style="{StaticResource MainLabelStyle}">Data de Entrada/Agendamento</Label>
                                    <DatePicker x:Name="DataAgendamentoDatePicker"></DatePicker>
                                </StackPanel>

                                <CheckBox x:Name="ConcluidoCheckBox" HorizontalAlignment="Center" VerticalAlignment="Center" Grid.Row="1">Concluída</CheckBox>
                                
                                <StackPanel Grid.Row="1" Grid.Column="1" Style="{StaticResource MainStackPanelStyle}">
                                    <Label Style="{StaticResource MainLabelStyle}">Data da Conclusão</Label>
                                    <DatePicker x:Name="DataConclusaoDatePicker" IsEnabled="{Binding ElementName=ConcluidoCheckBox, Path=IsChecked}"></DatePicker>
                                </StackPanel>
                            </Grid>
                        </GroupBox>
                    </Grid>
                </TabItem>
                <TabItem Header="Peças">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="2*"/>
                            <ColumnDefinition Width="1*"/>
                            <ColumnDefinition Width="2*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="1*"/>
                            <RowDefinition Height="9*"/>
                        </Grid.RowDefinitions>

                        <Label Style="{StaticResource MainLabelStyle}">Lista de Peças</Label>
                        <Grid Grid.Column="0" Grid.Row="1">
                            <DataGrid x:Name="PecasDataGrid" AutoGenerateColumns="False" IsReadOnly="True">
                                <DataGrid.Columns>
                                    <DataGridTextColumn Header="Quantidade em Estoque" Binding="{Binding Quantidade}"/>
                                    <DataGridTextColumn Header="Descrição" Binding="{Binding Descricao}"/>
                                </DataGrid.Columns>
                            </DataGrid>
                        </Grid>

                        <Grid Grid.Column="1" Grid.Row="1">
                            <Grid VerticalAlignment="Center">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="1*"/>
                                    <RowDefinition Height="1*"/>
                                    <RowDefinition Height="1*"/>
                                </Grid.RowDefinitions>

                                <Button Grid.Row="0" HorizontalContentAlignment="Center" x:Name="SelecionarPeca" Click="SelecionarPeca_Click">----></Button>
                                <Border Grid.Row="1" Margin="10"/>
                                <Button Grid.Row="2" HorizontalContentAlignment="Center" x:Name="RemoverPeca" Click="RemoverPeca_Click">&lt;----</Button>
                            </Grid>
                        </Grid>

                        <Label Style="{StaticResource MainLabelStyle}" Grid.Column="2">Peças Selecionadas</Label>
                        <Grid Grid.Column="2" Grid.Row="1">
                            <DataGrid x:Name="PecasSelecionadasDataGrid" AutoGenerateColumns="False" IsReadOnly="True">
                                <DataGrid.Columns>
                                    <DataGridTextColumn Header="Quantidade Selecionada" Binding="{Binding Quantidade}"/>
                                    <DataGridTextColumn Header="Descrição" Binding="{Binding Descricao}"/>
                                </DataGrid.Columns>
                            </DataGrid>

                        </Grid>

                    </Grid>
                </TabItem>
            </TabControl>
        </Grid>

        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="1*"/>
            </Grid.ColumnDefinitions>
            <Button x:Name="RegistrarBtn" Click="RegistrarBtn_Click" Grid.Row="3" Background="#FF6EE66E" HorizontalAlignment="Center" Margin="0 5" >
                REGISTRAR MANUTENÇÃO
            </Button>

            <Button x:Name="CancelarBtn" Click="CancelarBtn_Click" Grid.Row="3" Grid.Column="1" Background="#FFE66E6E" Margin="40 5">
                CANCELAR
            </Button>
        </Grid>
    </Grid>
</Window>
