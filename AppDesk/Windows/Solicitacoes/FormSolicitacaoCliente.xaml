<Window x:Class="AppDesk.Windows.Solicitacoes.FormSolicitacaoCliente"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AppDesk.Windows.Solicitacoes"
        xmlns:ucs="clr-namespace:AppDesk.UserControls.Solicitacoes"
        mc:Ignorable="d"
        Title="Solicitação Web" Height="500" Width="700" MinHeight="500" MinWidth="700" MaxHeight="500" MaxWidth="700">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="10*"/>
            <RowDefinition Height="80*"/>
            <RowDefinition Height="10*"/>
        </Grid.RowDefinitions>

        <Label Grid.Row="0" Style="{StaticResource MainLabelStyle}" FontSize="20">Solicitação</Label>

        <Grid Grid.Row="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="9*"/>
            </Grid.RowDefinitions>

            <Grid Grid.Row="0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1*"/>
                    <ColumnDefinition Width="1*"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0" Style="{StaticResource MainStackPanelStyle}">
                    <Label Style="{StaticResource MainLabelStyle}">Tipo de Solicitação</Label>
                    <TextBox x:Name="TipoSolicitacaoTextBox" Width="120" IsEnabled="False" Style="{StaticResource MainTextBoxStyle}"></TextBox>
                </StackPanel>

                <StackPanel Grid.Column="1" Style="{StaticResource MainStackPanelStyle}">
                    <Label Style="{StaticResource MainLabelStyle}">Item de Solicitação</Label>
                    <TextBox x:Name="ItemSolicitação" Width="120" IsEnabled="False" Style="{StaticResource MainTextBoxStyle}"></TextBox>
                </StackPanel>
            </Grid>

            <Grid Grid.Row="1">
                <ucs:SolicitacaoAlteracaoCliente x:Name="SolicitacaoClienteUC" Visibility="Collapsed"/>
            </Grid>
        </Grid>

        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="1*"/>
            </Grid.ColumnDefinitions>
            <Button x:Name="AprovarBtn" Click="AprovarBtn_Click" Grid.Row="3" Background="#FF6EE66E" HorizontalAlignment="Center" Margin="0 5" >
                APROVAR SOLICITAÇÃO
            </Button>

            <Button x:Name="ReprovarBtn" Click="ReprovarBtn_Click" Grid.Row="3" Grid.Column="1" Background="#FFE2D01B" Margin="10 5" HorizontalAlignment="Center">
                REPROVAR SOLICITAÇÃO
            </Button>

            <Button x:Name="RemoverBtn" Click="RemoverBtn_Click" Grid.Row="3" Grid.Column="2" Background="#FFE66E6E" Margin="10 5" HorizontalAlignment="Center" >
                REMOVER SOLICITAÇÃO
            </Button>
        </Grid>
    </Grid>
</Window>
