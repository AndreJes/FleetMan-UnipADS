                            </Grid.ColumnDefinitions>
                            <!--#endregion-->

                            <!--#region Botoes Voltar e Registrar-->
                            <Button Click="BackToMainMenuGridBackBtn_Click" Grid.Column="0" Margin="20 10">
                                Voltar
                            </Button>

                            <Button x:Name="RegistrarPecaBtn" Click="RegistrarPecaBtn_Click" Grid.Column="1" HorizontalAlignment="Center" Margin="6,10" Padding="5" Width="128">
                                Registrar Peça
                            </Button>

                            <Button x:Name="FornecedoresListBtn" Click="FornecedoresListBtn_Click" Grid.Column="2" HorizontalAlignment="Center" Margin="6,10" Padding="5" Width="128">
                                Fornecedores
                            </Button>
                            <!--#endregion-->
                            <!--#region Seleção de Fornecedor-->
                            <StackPanel Grid.Column="3" Orientation="Vertical" Margin="10 5">
                                <Label BorderBrush="Black" HorizontalAlignment="Left" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" FontFamily="Verdana">
                                    Selecionar Fornecedor:
                                </Label>
                                <ComboBox>

                                </ComboBox>
                            </StackPanel>
                            <!--#endregion-->

                            <!--#region Separators-->
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Width="5">
                                <Separator Style="{StaticResource {x:Static ToolBar.SeparatorStyleKey}}"/>
                            </StackPanel>
                            <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Right" Width="5">
                                <Separator Style="{StaticResource {x:Static ToolBar.SeparatorStyleKey}}"/>
                            </StackPanel>
                            <StackPanel Grid.Column="2" Orientation="Horizontal" HorizontalAlignment="Right" Width="5">
                                <Separator Style="{StaticResource {x:Static ToolBar.SeparatorStyleKey}}"/>
                            </StackPanel>
                            <!--#endregion-->
                        </Grid>
                    </Border>
                    <!--#endregion-->
                    <!--#region Lista-->
                    <Grid x:Name="PecasListGrid" Grid.Row="1">
                        <DataGrid x:Name="PecasDataGrid" Margin="10" IsReadOnly="True" AutoGenerateColumns="False" Grid.Row="1">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="Lote" Binding="{Binding Lote}"/>
                                <DataGridTextColumn Header="Descrição" Binding="{Binding Descricao}"/>
                                <DataGridTextColumn Header="Quantidade em Estoque" Binding="{Binding Quantidade}"/>
                                <DataGridTemplateColumn Header="Detalhes">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <Button x:Name="PecaDetailsBtn" Click="PecaDetailsBtn_Click">
                                                Detalhes
                                            </Button>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>
                            </DataGrid.Columns>
                        </DataGrid>
                    </Grid>
                    <!--#endregion-->
                </Grid>
                <!--#endregion-->

                <!--#region Abastecimentos List/Actions Grid Menu-->
                <Grid x:Name="AbastecimentoGrid" Visibility="Collapsed" Grid.Row="1">
                    <!--#region Rows Definitions-->
                    <Grid.RowDefinitions>
                        <RowDefinition Height="15*"/>
                        <RowDefinition Height="119*"/>
                    </Grid.RowDefinitions>
                    <!--#endregion-->
                    <!--#region ToolBar-->
                    <Border Grid.Row="0" BorderBrush="LightSlateGray" BorderThickness="0 1" Background="AliceBlue">
                        <Grid>
                            <!--#region Columns-->
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="85*"/>
                                <ColumnDefinition Width="140*"/>
                                <ColumnDefinition Width="234*"/>
                                <ColumnDefinition Width="229*"/>
                                <ColumnDefinition Width="358*"/>
                            </Grid.ColumnDefinitions>
                            <!--#endregion-->

                            <!--#region Botoes Voltar e Registrar-->
                            <Button Click="BackToMainMenuGridBackBtn_Click" Grid.Column="0" Margin="20 10">
                                Voltar
                            </Button>

                            <Button x:Name="RegistrarAbastecimentoBtn" Click="RegistrarAbastecimentoBtn_Click" Grid.Column="1" Margin="20 10" FontSize="9">
                                Registrar Abastecimento
                            </Button>
                            <!--#endregion-->

                            <!--#region Pesquisa-->
                            
                            <!--#endregion-->

                            <!--#region Separators-->
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Width="5">
                                <Separator Style="{StaticResource {x:Static ToolBar.SeparatorStyleKey}}"/>
                            </StackPanel>
                            <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Right" Width="5">
                                <Separator Style="{StaticResource {x:Static ToolBar.SeparatorStyleKey}}"/>
                            </StackPanel>
                            <StackPanel Grid.Column="2" Orientation="Horizontal" HorizontalAlignment="Right" Width="5">
                                <Separator Style="{StaticResource {x:Static ToolBar.SeparatorStyleKey}}"/>
                            </StackPanel>
                            <StackPanel Grid.Column="3" Orientation="Horizontal" HorizontalAlignment="Right" Width="5">
                                <Separator Style="{StaticResource {x:Static ToolBar.SeparatorStyleKey}}"/>
                            </StackPanel>
                            <!--#endregion-->
                        </Grid>
                    </Border>
                    <!--#endregion-->
                    <!--#region Lista-->
                    <Grid Grid.Row="1">
                        <!--#region Columns/Rows-->
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="50*"/>
                            <ColumnDefinition Width="50*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="10*"/>
                            <RowDefinition Height="90*"/>
                        </Grid.RowDefinitions>
                        <!--#endregion-->
                        <!--#region Multas-->
                        <DataGrid x:Name="AbastecimentosAgendadosDataGrid" Margin="10" AutoGenerateColumns="False" IsReadOnly="True" Grid.Row="1">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="Código" Binding="{Binding AbastecimentoId}"/>
                                <DataGridTextColumn Header="Data Agendada" Binding="{Binding DataAgendada}" />
                                <DataGridTextColumn Header="Nome do Motorista" Binding="{Binding Motorista.Nome}"/>
                                <DataGridTextColumn Header="Placa do Veiculo" Binding="{Binding Veiculo.Placa}"/>
                                <DataGridTemplateColumn Header="Detalhes">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <Button x:Name="DetalhesAbastecimentoBtn" Click="DetalhesAbastecimentoBtn_Click">
                                                Detalhes
                                            </Button>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>
                            </DataGrid.Columns>
                        </DataGrid>
                        <!--#endregion-->
                        <!--#region Separador-->
                        <StackPanel Orientation="Horizontal" Grid.RowSpan="2" HorizontalAlignment="Right" Width="5">
                            <Separator Style="{StaticResource {x:Static ToolBar.SeparatorStyleKey}}"/>
                        </StackPanel>
                        <!--#endregion-->
                        <!--#region Sinistros-->
                        <DataGrid x:Name="AbastecimentosFinalizadosDataGrid" Margin="10" AutoGenerateColumns="False" IsReadOnly="True" Grid.Row="1" Grid.Column="1">
                            <DataGrid.Columns>

                                <DataGridTextColumn Header="Código" Binding="{Binding AbastecimentoId}"/>
                                <DataGridTextColumn Header="Valor" Binding="{Binding Valor, StringFormat=F2}"/>
                                <DataGridTextColumn Header="Data Conclusão" Binding="{Binding DataConclusao}" />
                                <DataGridTextColumn Header="Nome do Motorista" Binding="{Binding Motorista.Nome}"/>
                                <DataGridTextColumn Header="Placa do Veiculo" Binding="{Binding Veiculo.Placa}"/>
                                <DataGridTemplateColumn Header="Detalhes">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <Button x:Name="AbastecimentosFinDetailsBtn" Click="AbastecimentosFinDetailsBtn_Click">Detalhes</Button>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>
                            </DataGrid.Columns>
                        </DataGrid>

                        <!--#endregion-->
                    </Grid>
                    <!--#endregion-->
                </Grid>
                <!--#endregion-->

                <!--#endregion-->
            </Grid>
        </Border>
        <!--#endregion-->
    </Grid>
</Window>
