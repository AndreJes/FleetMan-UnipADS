<Window x:Class="AppDesk.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:uc="clr-namespace:AppDesk.UserControls"
        xmlns:lc="clr-namespace:AppDesk.Serviço"
        xmlns:local="clr-namespace:AppDesk"
        mc:Ignorable="d"
        Title="FleetMan" Style="{StaticResource WindowBackgroundColorSetter}" WindowStartupLocation="CenterScreen" Height="640" Width="1080" MaxHeight="640" MinHeight="640" MaxWidth="1080" MinWidth="1080">
    <Window.Resources>
        <Style x:Key="MainMenuBtnStyle" TargetType="Button">
            <Setter Property="Height" Value="120"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="0 0 0 0"/>
            <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
            <Setter Property="Margin" Value="20"/>
        </Style>
        <Style x:Key="MainMenuLabelStyle" TargetType="Label">
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="HorizontalContentAlignment" Value="Center"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="FontFamily" Value="Arial Black" />
            <Setter Property="Background" Value="Gray"/>
            <Setter Property="Foreground" Value="White"/>
        </Style>
    </Window.Resources>
    <Grid x:Name="MainGrid">

        <!--#region Login Area-->
        <Grid x:Name="LogonGridBorder" Visibility="Hidden" HorizontalAlignment="Center">
            <uc:Login x:Name="LoginField"></uc:Login>
        </Grid>
        <!--#endregion-->
        
        <!--#region Main Content-->
        <Border Visibility="Visible" x:Name="MainContentBorder" Margin="10" BorderBrush="Gray" BorderThickness="3">
            <Grid ShowGridLines="False">
                <!--#region Row Definitions-->
                <Grid.RowDefinitions>
                    <RowDefinition Height="7*"/>
                    <RowDefinition Height="80*"/>
                </Grid.RowDefinitions>
                <!--#endregion-->

                <!--#region Information Grid (Avisos e informações de Login)-->
                <Border x:Name="InformationBorder" BorderBrush="LightGray" Background="LightGray" BorderThickness="0 0 0 1">
                    <Grid>
                        <!--#region Columns-->
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="20*"/>
                            <ColumnDefinition Width="80*"/>
                        </Grid.ColumnDefinitions>
                        <!--#endregion-->

                        <uc:AvisosUserControl></uc:AvisosUserControl>
                        
                        <StackPanel x:Name="UserInfoPanel" Orientation="Horizontal" HorizontalAlignment="Right" Grid.Column="2">

                            <Button Margin="0 8" x:Name="CurrentUserBtn" Click="CurrentUserBtn_Click" Background="White">
                                <Image Source="Content/Icones/user.png" Height="20" Width="24"/>
                            </Button>

                            <Label Content="{Binding Funcionario.CPFTxt}" Margin="0 8" BorderBrush="Gray" BorderThickness="1 1 0 1" Background="White"/>
                            <Label Content="{Binding Funcionario.Nome}" Margin="0 8" BorderBrush="Gray" BorderThickness="1 1 0 1" Background="White"/>

                            <Button Margin="0 8 20 8" x:Name="LogoutBtn" Click="LogoutBtn_Click">
                                SAIR
                                <!--Colocar Imagem do simbolo de desligar-->
                            </Button>

                        </StackPanel>
                    </Grid>
                </Border>
                <!--#endregion-->

                <!--#region Main Menu Grid-->
                <Border x:Name="MainMenuBtnsGridBorder" Grid.Row="1" Visibility="Collapsed">
                    <Grid>
                        <Grid Visibility="Visible" x:Name="MainMenuPrimaryButtonsGrid" ShowGridLines="False" >
                            <!--#region Grid Columns and Row-->
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="1*" />
                                <ColumnDefinition Width="1*" />
                                <ColumnDefinition Width="1*" />
                                <ColumnDefinition Width="1*" />
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="1*"/>
                                <RowDefinition Height="1*"/>
                                <RowDefinition Height="1*"/>
                            </Grid.RowDefinitions>
                            <!--#endregion-->
                            <!--#region Menu Principal-->

                            <!--#region Clientes-->
                            <Button x:Name="ClientesMainMenuBtn" Click="ClientesMainMenuBtn_Click" Style="{StaticResource MainMenuBtnStyle}">
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="4*"/>
                                        <RowDefinition Height="1*"/>
                                    </Grid.RowDefinitions>
                                    <Image Grid.Row="0" x:Name="ClientesBtnImage" Source="/Content/Icones/clientes.png" Stretch="Uniform"/>

                                    <Label Grid.Row="1" BorderBrush="LightGray" Style="{StaticResource MainMenuLabelStyle}">
                                        CLIENTES
                                    </Label>
                                </Grid>
                            </Button>
                            <!--#endregion-->

                            <!--#region Veiculos-->
                            <Button Grid.Column="1" x:Name="VehicleMainMenuBtn" Click="VehicleMainMenuBtn_Click" Style="{StaticResource MainMenuBtnStyle}">
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="4*"/>
                                        <RowDefinition Height="1*"/>
                                    </Grid.RowDefinitions>
                                    <Image Grid.Row="0" x:Name="VeicBtnImage" Source="/Content/Icones/carro.png"/>

                                    <Label Grid.Row="1" BorderBrush="LightGray" Style="{StaticResource MainMenuLabelStyle}">
                                        VEÍCULOS
                                    </Label>
                                </Grid>
                            </Button>
                            <!--#endregion-->

                            <!--#region Motoristas-->
                            <Button Grid.Column="2" x:Name="MotoristaMainMenuBtn" Click="MotoristaMainMenuBtn_Click" Style="{StaticResource MainMenuBtnStyle}">
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="4*"/>
                                        <RowDefinition Height="1*"/>
                                    </Grid.RowDefinitions>
                                    <Image Grid.Row="0" Source="/Content/Icones/motorista.png" Stretch="Uniform"/>

                                    <Label Grid.Row="1" BorderBrush="LightGray" Style="{StaticResource MainMenuLabelStyle}">
                                        MOTORISTAS
                                    </Label>
                                </Grid>
                            </Button>
                            <!--#endregion-->

                            <!--#region Multas/Sinistros-->
                            <Button Grid.Column="3" x:Name="MultaSinisMainMenuBtn" Click="MultaSinisMainMenuBtn_Click" Style="{StaticResource MainMenuBtnStyle}">
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="4*"/>
                                        <RowDefinition Height="1*"/>
                                    </Grid.RowDefinitions>
                                    <Grid Grid.Row="0">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="1*"/>
                                            <ColumnDefinition Width="1*"/>
                                        </Grid.ColumnDefinitions>
                                        <Image Grid.Column="0" Source="/Content/Icones/multa.png" Stretch="Uniform"/>
                                        <Image Grid.Column="1" Source="/Content/Icones/sinistro.png" Stretch="Uniform"/>

                                    </Grid>

                                    <Label Grid.Row="1" BorderBrush="LightGray" Style="{StaticResource MainMenuLabelStyle}">
                                        MULTAS e SINISTROS
                                    </Label>
                                </Grid>
                            </Button>
                            <!--#endregion-->

                            <!--#region Viagens-->
                            <Button Grid.Row="1" Grid.Column="0" x:Name="ViagensMainMenuBtn" Click="ViagensMainMenuBtn_Click" Style="{StaticResource MainMenuBtnStyle}">
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="4*"/>
                                        <RowDefinition Height="1*"/>
                                    </Grid.RowDefinitions>
                                    <Image Grid.Row="0" Source="/Content/Icones/viagem.png" Stretch="Uniform"/>

                                    <Label Grid.Row="1" BorderBrush="LightGray" Style="{StaticResource MainMenuLabelStyle}">
                                        VIAGENS
                                    </Label>
                                </Grid>
                            </Button>
                            <!--#endregion-->

                            <!--#region Solicitações-->
                            <Button Grid.Row="1" Grid.Column="1" x:Name="SolicitacaoMainMenuBtn" Click="SolicitacaoMainMenuBtn_Click" Style="{StaticResource MainMenuBtnStyle}">
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="4*"/>
                                        <RowDefinition Height="1*"/>
                                    </Grid.RowDefinitions>
                                    <Image Grid.Row="0" Source="/Content/Icones/solicitacoes.png" Stretch="Uniform"/>

                                    <Label Grid.Row="1" BorderBrush="LightGray" Style="{StaticResource MainMenuLabelStyle}">
                                        SOLICITAÇÕES
                                    </Label>
                                </Grid>
                            </Button>
                            <!--#endregion-->

                            <!--#region Garagens-->
                            <Button Grid.Row="1" Grid.Column="2" x:Name="GaragensMainMenuBtn" Click="GaragensMainMenuBtn_Click" Style="{StaticResource MainMenuBtnStyle}">
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="4*"/>
                                        <RowDefinition Height="1*"/>
                                    </Grid.RowDefinitions>
                                    <Image Grid.Row="0" Source="/Content/Icones/garagem.png" Stretch="Uniform"/>

                                    <Label Grid.Row="1" BorderBrush="LightGray" Style="{StaticResource MainMenuLabelStyle}">
                                        GARAGENS
                                    </Label>
                                </Grid>
                            </Button>
                            <!--#endregion-->

                            <!--#region Locações-->
                            <Button Grid.Row="1" Grid.Column="3" x:Name="LocacaoMainMenuBtn" Click="LocacaoMainMenuBtn_Click" Style="{StaticResource MainMenuBtnStyle}">
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="4*"/>
                                        <RowDefinition Height="1*"/>
                                    </Grid.RowDefinitions>
                                    <Image Grid.Row="0" Source="/Content/Icones/aluguel.png" Stretch="Uniform"/>

                                    <Label Grid.Row="1" BorderBrush="LightGray" Style="{StaticResource MainMenuLabelStyle}">
                                        ALUGUEIS
                                    </Label>
                                </Grid>
                            </Button>
                            <!--#endregion-->

                            <!--#region Manutenção-->
                            <Button Grid.Row="2" Grid.Column="0" x:Name="ManutencaoMainMenuBtn" Click="ManutencaoMainMenuBtn_Click" Style="{StaticResource MainMenuBtnStyle}">
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="4*"/>
                                        <RowDefinition Height="1*"/>
                                    </Grid.RowDefinitions>
                                    <Image Grid.Row="0" Source="/Content/Icones/manutencao.png" Stretch="Uniform"/>

                                    <Label Grid.Row="1" BorderBrush="LightGray" Style="{StaticResource MainMenuLabelStyle}">
                                        CONTROLE DE MANUTENÇÕES
                                    </Label>
                                </Grid>
                            </Button>
                            <!--#endregion-->

                            <!--#region Financeiro-->
                            <Button Grid.Row="2" Grid.Column="1" x:Name="FinanceiroMainMenuBtn" Click="FinanceiroMainMenuBtn_Click" Style="{StaticResource MainMenuBtnStyle}">
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="4*"/>
                                        <RowDefinition Height="1*"/>
                                    </Grid.RowDefinitions>
                                    <Image Grid.Row="0" Source="/Content/Icones/financeiro.png" Stretch="Uniform"/>

                                    <Label Grid.Row="1" BorderBrush="LightGray" Style="{StaticResource MainMenuLabelStyle}">
                                        FINANCEIRO
                                    </Label>
                                </Grid>
                            </Button>
                            <!--#endregion-->

                            <!--#region Relatórios-->
                            <Button Grid.Row="2" Grid.Column="2" x:Name="RelatorioMainMenuBtn" Click="RelatorioMainMenuBtn_Click" Style="{StaticResource MainMenuBtnStyle}">
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="4*"/>
                                        <RowDefinition Height="1*"/>
                                    </Grid.RowDefinitions>
                                    <Image Grid.Row="0" Source="/Content/Icones/grafico.png" Stretch="Uniform"/>

                                    <Label Grid.Row="1" BorderBrush="LightGray" Style="{StaticResource MainMenuLabelStyle}">
                                        RELATORIOS
                                    </Label>
                                </Grid>
                            </Button>
                            <!--#endregion-->

                            <!--#region Funcionários-->
                            <Button  Grid.Row="2" Grid.Column="3" x:Name="FuncionarioMainMenuBtn" Click="FuncionarioMainMenuBtn_Click" Style="{StaticResource MainMenuBtnStyle}">
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="4*"/>
                                        <RowDefinition Height="1*"/>
                                    </Grid.RowDefinitions>
                                    <Image Grid.Row="0" Source="/Content/Icones/usuarios.png" Stretch="Uniform"/>

                                    <Label Grid.Row="1" BorderBrush="LightGray" Style="{StaticResource MainMenuLabelStyle}">
                                        USUARIOS
                                    </Label>
                                </Grid>
                            </Button>
                            <!--#endregion-->

                            <!--#endregion-->

                        </Grid>

                        <!--#region Manutenção SubMenu-->
                        <Grid Visibility="Visible" x:Name="ManutencaoSubMenuButtonsGrid">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="10*"/>
                                <RowDefinition Height="90*"/>
                            </Grid.RowDefinitions>

                            <Button Click="BackToMainMenuGridBackBtn_Click" Margin="10" HorizontalAlignment="Left" BorderThickness="0" Background="Transparent">
                                <Image Source="/Content/Icones/Botoes/voltar.png"></Image>
                            </Button>

                            <Grid Grid.Row="1">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="1*"/>
                                    <ColumnDefinition Width="1*"/>
                                    <ColumnDefinition Width="1*"/>
                                </Grid.ColumnDefinitions>
                                <Button Grid.Row="1" Grid.Column="0" x:Name="ManutencaoSubMenuBtn" Click="ManutencaoSubMenuBtn_Click" Style="{StaticResource MainMenuBtnStyle}" Margin="50">
                                    <Grid>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="4*"/>
                                            <RowDefinition Height="1*"/>
                                        </Grid.RowDefinitions>
                                        <Image Grid.Row="0" Source="/Content/Icones/manutencaoMain.png" Stretch="Uniform"/>

                                        <Label Grid.Row="1" BorderBrush="LightGray" Style="{StaticResource MainMenuLabelStyle}">
                                            LISTA DE MANUTENÇÕES
                                        </Label>
                                    </Grid>
                                </Button>

                                <Button Grid.Row="1" Grid.Column="1" x:Name="AbastecimentosSubMenuBtn" Click="AbastecimentosSubMenuBtn_Click" Style="{StaticResource MainMenuBtnStyle}" Margin="50">
                                    <Grid>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="4*"/>
                                            <RowDefinition Height="1*"/>
                                        </Grid.RowDefinitions>
                                        <Image Grid.Row="0" Source="/Content/Icones/abastecimento.png" Stretch="Uniform"/>

                                        <Label Grid.Row="1" BorderBrush="LightGray" Style="{StaticResource MainMenuLabelStyle}">
                                            ABASTECIMENTOS
                                        </Label>
                                    </Grid>
                                </Button>

                                <Button Grid.Row="1" Grid.Column="2" x:Name="EstoqueSubMenuBtn" Click="EstoqueSubMenuBtn_Click" Style="{StaticResource MainMenuBtnStyle}" Margin="50">
                                    <Grid>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="4*"/>
                                            <RowDefinition Height="1*"/>
                                        </Grid.RowDefinitions>
                                        <Image Grid.Row="0" Source="/Content/Icones/pecas.png" Stretch="Uniform"/>

                                        <Label Grid.Row="1" BorderBrush="LightGray" Style="{StaticResource MainMenuLabelStyle}">
                                            ESTOQUE DE PEÇAS
                                        </Label>
                                    </Grid>
                                </Button>
                            </Grid>
                        </Grid>
                    </Grid>
                </Border>
                <!--#endregion-->

                <!--#region Todos os grids de listas-->

                <!--#region Vehicles List/Actions Grid Menu-->
                <Grid x:Name="VehicleGrid" Visibility="Collapsed" Grid.Row="1">
                    <!--#region Rows Definitions-->
                    <Grid.RowDefinitions>
                        <RowDefinition Height="15*"/>
                        <RowDefinition Height="119*"/>
                    </Grid.RowDefinitions>
                    <!--#endregion-->
                    <!--#region ToolBar-->
                    <Border Grid.Row="0" Style="{StaticResource MainToolBarStyle}">
                        <Grid x:Name="VehicleToolBarGrid">
                            <!--#region Columns-->
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="85*"/>
                                <ColumnDefinition Width="140*"/>
                                <ColumnDefinition Width="140*"/>
                                <ColumnDefinition Width="330*"/>
                                <ColumnDefinition Width="350*"/>
                            </Grid.ColumnDefinitions>
                            <!--#endregion-->

                            <!--#region Botoes Voltar e Registrar-->
                            <Button x:Name="VehicleGridBackBtn" Click="BackToMainMenuGridBackBtn_Click" Margin="10" HorizontalAlignment="Left" BorderThickness="0" Background="Transparent">
                                <Image Source="/Content/Icones/Botoes/voltar.png"></Image>
                            </Button>

                            <Button x:Name="RegistrarVeiculoBtn" Click="RegistrarVeiculoBtn_Click" Grid.Column="1" Margin="20 10" IsEnabled="{Binding Permissoes.Veiculos.Cadastrar, Mode=OneWay}">
                                Registrar Veiculo
                            </Button>
                            <!--#endregion-->
                            <!--#region Pesquisa-->
                            <StackPanel Grid.Column="3" Orientation="Vertical" Margin="10 5">
                                <Label BorderBrush="Black" HorizontalAlignment="Left" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" FontFamily="Verdana">
                                    Pesquisar:
                                </Label>
                                <TextBox x:Name="VehicleSearchTextBox" TextChanged="VehicleSearchTextBox_TextChanged">

                                </TextBox>
                            </StackPanel>
                            <!--#endregion-->
                            <!--#region Lista Seguros-->
                            <Button Margin="20 10" Grid.Column="2" x:Name="SegurosListBtn" Click="SegurosListBtn_Click">
                                Seguradoras
                            </Button>
                            <!--#endregion-->
                            <!--#region Separators-->
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Width="5">
                                <Separator Style="{StaticResource {x:Static ToolBar.SeparatorStyleKey}}"/>
                            </StackPanel>
                            <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Right" Width="5">
                                <Separator Style="{StaticResource {x:Static ToolBar.SeparatorStyleKey}}"/>
                            </StackPanel>
                            <StackPanel Grid.Column="2" Orientation="Horizontal" HorizontalAlignment="Right" Width="5">
                                <Separator Style="{StaticResource {x:Static ToolBar.SeparatorStyleKey}}"/>
                            </StackPanel>
                            <StackPanel Grid.Column="3" Orientation="Horizontal" HorizontalAlignment="Right" Width="5">
                                <Separator Style="{StaticResource {x:Static ToolBar.SeparatorStyleKey}}"/>
                            </StackPanel>
                            <!--#endregion-->
                        </Grid>
                    </Border>
                    <!--#endregion-->
                    <!--#region Lista-->
                    <Grid x:Name="VehicleListGrid" Grid.Row="1">
                        <DataGrid x:Name="VehicleDataGrid" Margin="10" IsReadOnly="True" AutoGenerateColumns="False" Grid.Row="1">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="Placa" Binding="{Binding Placa}"/>
                                <DataGridTextColumn Header="Código Renavam" Binding="{Binding CodRenavam}"/>
                                <DataGridTextColumn Header="Tipo" Binding="{Binding Tipo}"/>
                                <DataGridTextColumn Header="Modelo" Binding="{Binding Modelo}"/>
                                <DataGridTextColumn Header="Marca" Binding="{Binding Marca}"/>
                                <DataGridTextColumn Header="Veiculo adaptado" Binding="{Binding AdaptadoTxt}"/>
                                <DataGridTextColumn Header="Veiculo para locação" Binding="{Binding ParaLocacaoTxt}"/>
                                <DataGridTemplateColumn Header="Detalhes">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <Button x:Name="DetalhesVeiculoBtn" Click="DetalhesVeiculoBtn_Click">Detalhes</Button>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>
                            </DataGrid.Columns>
                        </DataGrid>
                    </Grid>
                    <!--#endregion-->
                </Grid>
                <!--#endregion-->

                <!--#region Clientes List/Actions Grid Menu-->
                <Grid x:Name="ClientesGrid" Visibility="Collapsed" Grid.Row="1">
                    <!--#region Rows Definitions-->
                    <Grid.RowDefinitions>
                        <RowDefinition Height="15*"/>
                        <RowDefinition Height="119*"/>
                    </Grid.RowDefinitions>
                    <!--#endregion-->
                    <!--#region ToolBar-->
                    <Border Grid.Row="0" Style="{StaticResource MainToolBarStyle}">
                        <Grid x:Name="ClienteToolBarGrid">
                            <!--#region Columns-->
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="85*"/>
                                <ColumnDefinition Width="140*"/>
                                <ColumnDefinition Width="234*"/>
                                <ColumnDefinition Width="229*"/>
                                <ColumnDefinition Width="358*"/>
                            </Grid.ColumnDefinitions>
                            <!--#endregion-->

                            <!--#region Botoes Voltar e Registrar-->
                            <Button Click="BackToMainMenuGridBackBtn_Click" Margin="10" HorizontalAlignment="Left" BorderThickness="0" Background="Transparent">
                                <Image Source="/Content/Icones/Botoes/voltar.png"></Image>
                            </Button>

                            <Button x:Name="RegistrarClienteBtn" IsEnabled="{Binding Permissoes.Clientes.Cadastrar, Mode=OneWay}" Click="RegistrarClienteBtn_Click" Grid.Column="1" Margin="20 10">
                                Registrar Cliente
                            </Button>
                            <!--#endregion-->

                            <!--#region Pesquisa-->
                            <StackPanel Grid.Column="2" Grid.ColumnSpan="2" Orientation="Vertical" Margin="10 5">
                                <Label BorderBrush="Black" HorizontalAlignment="Left" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" FontFamily="Verdana">
                                    Pesquisar:
                                </Label>
                                <TextBox x:Name="ClienteSearchTextBox" TextChanged="ClienteSearchTextBox_TextChanged">

                                </TextBox>
                            </StackPanel>
                            <!--#endregion-->

                            <!--#region Separators-->
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Width="5">
                                <Separator Style="{StaticResource {x:Static ToolBar.SeparatorStyleKey}}"/>
                            </StackPanel>
                            <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Right" Width="5">
                                <Separator Style="{StaticResource {x:Static ToolBar.SeparatorStyleKey}}"/>
                            </StackPanel>
                            <StackPanel Grid.Column="3" Orientation="Horizontal" HorizontalAlignment="Right" Width="5">
                                <Separator Style="{StaticResource {x:Static ToolBar.SeparatorStyleKey}}"/>
                            </StackPanel>
                            <!--#endregion-->
                        </Grid>
                    </Border>
                    <!--#endregion-->
                    <!--#region Listas -->
                    <Grid x:Name="ClientesListGrid" Grid.Row="1">
                        <!--#region Columns/Rows-->
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="50*"/>
                            <ColumnDefinition Width="50*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="10*"/>
                            <RowDefinition Height="90*"/>
                        </Grid.RowDefinitions>
                        <!--#endregion-->
                        <!--#region Pessoa Fisica-->
                        <Label Style="{StaticResource MainLabelFullRoundStyle}" FontSize="20">PESSOA FÍSICA</Label>

                        <DataGrid x:Name="ClientePFDataGrid" Margin="10" AutoGenerateColumns="False" IsReadOnly="True" Grid.Row="1">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="CPF" Binding="{Binding CPFTxt}"/>
                                <DataGridTextColumn Header="Nome" Binding="{Binding Nome}"/>
                                <DataGridTextColumn Header="E-mail" Binding="{Binding Email}" />
                                <DataGridTextColumn Header="Status" Binding="{Binding AtivoTxt}" />
                                <DataGridTemplateColumn Header="Detalhes">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <Button x:Name="ClientePFDetailsButton" Click="ClientePFDetailsButton_Click">Detalhes</Button>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>
                            </DataGrid.Columns>
                        </DataGrid>
                        <!--#endregion-->
                        <!--#region Separador-->
                        <StackPanel Orientation="Horizontal" Grid.RowSpan="2" HorizontalAlignment="Right" Width="2">
                            <Separator Style="{StaticResource {x:Static ToolBar.SeparatorStyleKey}}"/>
                        </StackPanel>
                        <!--#endregion-->
                        <!--#region Pessoa Juridica-->
                        <Label Style="{StaticResource MainLabelFullRoundStyle}" Grid.Column="1" FontSize="20">PESSOA JURÍDICA</Label>

                        <DataGrid x:Name="ClientePJDataGrid" Margin="10" AutoGenerateColumns="False" IsReadOnly="True" Grid.Row="1" Grid.Column="1">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="CNPJ" Binding="{Binding CNPJTxt}"/>
                                <DataGridTextColumn Header="Nome" Binding="{Binding Nome}"/>
                                <DataGridTextColumn Header="E-mail" Binding="{Binding Email}" />
                                <DataGridTextColumn Header="Status" Binding="{Binding AtivoTxt}" />
                                <DataGridTemplateColumn Header="Detalhes">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <Button x:Name="ClientePJDetailsButton" Click="ClientePJDetailsButton_Click">Detalhes</Button>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>
                            </DataGrid.Columns>
                        </DataGrid>

                        <!--#endregion-->
                    </Grid>
                    <!--#endregion-->
                </Grid>
                <!--#endregion-->

                <!--#region Multas e Sinistros List/Actions Grid Menu-->
                <Grid x:Name="MultaSinisGrid" Visibility="Collapsed" Grid.Row="1">
                    <!--#region Rows Definitions-->
                    <Grid.RowDefinitions>
                        <RowDefinition Height="15*"/>
                        <RowDefinition Height="119*"/>
                    </Grid.RowDefinitions>
                    <!--#endregion-->
                    <!--#region ToolBar-->
                    <Border Grid.Row="0" Style="{StaticResource MainToolBarStyle}">
                        <Grid x:Name="MultaSinisToolBarGrid">
                            <!--#region Columns-->
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="85*"/>
                                <ColumnDefinition Width="140*"/>
                                <ColumnDefinition Width="234*"/>
                                <ColumnDefinition Width="229*"/>
                                <ColumnDefinition Width="358*"/>
                            </Grid.ColumnDefinitions>
                            <!--#endregion-->

                            <!--#region Botoes Voltar e Registrar-->
                            <Button Click="BackToMainMenuGridBackBtn_Click" Margin="10" HorizontalAlignment="Left" BorderThickness="0" Background="Transparent">
                                <Image Source="/Content/Icones/Botoes/voltar.png"></Image>
                            </Button>

                            <Button x:Name="RegistrarMultaSinisBtn" IsEnabled="{Binding Permissoes.MultasSinistros.Cadastrar, Mode=OneWay}" Click="RegistrarMultaSinisBtn_Click" Grid.Column="1" Margin="20 10" FontSize="9">
                                Registrar Multa/Sinistro
                            </Button>
                            <!--#endregion-->

                            <!--#region Pesquisa-->
                            <StackPanel Grid.Column="2" Orientation="Vertical" Margin="10 5">
