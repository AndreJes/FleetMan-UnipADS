<UserControl x:Class="AppDesk.UserControls.Campos.Masked.CPFFieldUC"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:AppDesk.UserControls.Campos.Masked"
             xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
             xmlns:s="clr-namespace:System;assembly=mscorlib"
             mc:Ignorable="d">
    <StackPanel Style="{StaticResource MainStackPanelStyle}">
        <Label Style="{StaticResource MainLabelRoundStyle}" Width="50">CPF</Label>
        <xctk:MaskedTextBox x:Name="CPFTextBox" Style="{StaticResource MainTextBoxStyle}" Width="125" Mask="000,000,000-00" ValueDataType="{x:Type s:String}" TextChanged="CPFTextBox_TextChanged">
            <TextBox.Resources>
                <Style TargetType="{x:Type Border}">
                    <Setter Property="CornerRadius" Value="0 5 5 0" />
                    <Setter Property="BorderThickness" Value="2"/>
                </Style>
            </TextBox.Resources>
        </xctk:MaskedTextBox>
    </StackPanel>
</UserControl>
