<UserControl x:Class="AppDesk.UserControls.Campos.Masked.TelefoneFieldUC"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:AppDesk.UserControls.Campos.Masked"
             xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
             xmlns:s="clr-namespace:System;assembly=mscorlib"
             mc:Ignorable="d">
    <StackPanel Style="{StaticResource MainStackPanelStyle}">
        <Label Style="{StaticResource MainLabelRoundStyle}">Telefone</Label>
        <xctk:MaskedTextBox x:Name="TelefoneTextBox" Style="{StaticResource MainTextBoxStyle}" Width="100" Mask="(00)00000-0000" ValueDataType="{x:Type s:String}" TextChanged="TelefoneTextBox_TextChanged">
            <TextBox.Resources>
                <Style TargetType="{x:Type Border}">
                    <Setter Property="CornerRadius" Value="0 5 5 0" />
                    <Setter Property="BorderThickness" Value="2"/>
                </Style>
            </TextBox.Resources>
        </xctk:MaskedTextBox>
    </StackPanel>
</UserControl>
