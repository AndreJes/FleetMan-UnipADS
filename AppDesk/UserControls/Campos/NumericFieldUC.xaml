<UserControl x:Class="AppDesk.UserControls.Campos.NumericFieldUC"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:AppDesk.UserControls.Campos"
             xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
             mc:Ignorable="d">
    <StackPanel Grid.Row="0" Style="{StaticResource MainStackPanelStyle}">
        <Label Style="{StaticResource MainLabelRoundStyle}" x:Name="UCLabel" Content="{Binding Label}"></Label>
        <xctk:IntegerUpDown x:Name="NumeroUD" Width="50" Value="0"></xctk:IntegerUpDown>
    </StackPanel>
</UserControl>
