<UserControl x:Class="AppDesk.UserControls.AlertasController"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:AppDesk.UserControls"
             mc:Ignorable="d" d:DesignHeight="50" d:DesignWidth="80">
    <Button ToolTip="Avisos" Background="White" BorderBrush="Black" HorizontalContentAlignment="Stretch" VerticalContentAlignment="Stretch" HorizontalAlignment="Center" VerticalAlignment="Center">
        <Button.Resources>
            <Style TargetType="Border">
                <Setter Property="CornerRadius" Value="20"/>
            </Style>
        </Button.Resources>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="1*"/>
            </Grid.ColumnDefinitions>
            <Image Grid.Column="0" Source="/Content/Icones/alerta.png" HorizontalAlignment="Right"/>
            <Label Grid.Column="1" Foreground="DarkRed" HorizontalAlignment="Left" VerticalAlignment="Center">1</Label>
        </Grid>
    </Button>
</UserControl>
