@model AppWeb.Models.Veiculos.VeiculoViewModel
@using Modelo.Classes.Desk

@{
    ViewBag.Title = "Detalhes do Veiculo";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section HeadStyles{
    <style>
        label.form-control{
            text-align:center;
        }
    </style>
}

@using (Html.BeginForm())
{
    <div class="card col-md-12 col-sm-12">
        <div class="card-header">
            <h2 class="card-title">@ViewBag.Title <div class="vr"></div>  <i class="fas fa-car" style="margin-left:10px;"></i></h2>
        </div>
        <div class="card-body">
            <div class="form-group form-inline">
                @Html.Label("Placa", new { @class = "form-control bg-secondary text-white col-md-3 col-sm-12" })
                @Html.EditorFor(model => model.Veiculo.Placa, new { htmlAttributes = new { @class = "form-control col-md-9 col-sm-12", disabled = "disabled" } })
            </div>
            <div class="form-group form-inline">
                @Html.Label("Ano", new { @class = "form-control bg-secondary text-white col-md-3 col-sm-12" })
                @Html.EditorFor(model => model.Veiculo.Ano, new { htmlAttributes = new { @class = "form-control col-md-9 col-sm-12", disabled = "disabled" } })
            </div>
            <div class="form-group form-inline">
                @Html.Label("Marca", new { @class = "form-control bg-secondary text-white col-md-3 col-sm-12" })
                @Html.EditorFor(model => model.Veiculo.Marca, new { htmlAttributes = new { @class = "form-control col-md-9 col-sm-12", disabled = "disabled" } })
            </div>
            <div class="form-group form-inline">
                @Html.Label("Modelo", new { @class = "form-control bg-secondary text-white col-md-3 col-sm-12" })
                @Html.EditorFor(model => model.Veiculo.Modelo, new { htmlAttributes = new { @class = "form-control col-md-9 col-sm-12", disabled = "disabled" } })
            </div>
            <div class="form-group form-inline">
                @Html.Label("Cor", new { @class = "form-control bg-secondary text-white col-md-3 col-sm-12" })
                @Html.EditorFor(model => model.Veiculo.Cor, new { htmlAttributes = new { @class = "form-control col-md-9 col-sm-12", disabled = "disabled" } })
            </div>
            <div class="form-group form-inline">
                @Html.Label("Renavam", new { @class = "form-control bg-secondary text-white col-md-3 col-sm-12" })
                @Html.EditorFor(model => model.Veiculo.CodRenavam, new { htmlAttributes = new { @class = "form-control col-md-9 col-sm-12", disabled = "disabled" } })
            </div>
            <div class="form-group form-inline">
                @Html.Label("Adaptado", new { @class = "form-control bg-secondary text-white col-md-3 col-sm-12" })
                @Html.EditorFor(model => model.Veiculo.Adaptado, new { htmlAttributes = new { @class = "form-control col-md-9 col-sm-12", disabled = "disabled" } })
            </div>
            <div class="form-group form-inline">
                @Html.Label("Alugado", new { @class = "form-control bg-secondary text-white col-md-3 col-sm-12" })
                @Html.EditorFor(model => model.Veiculo.ParaLocacao, new { htmlAttributes = new { @class = "form-control col-md-9 col-sm-12", disabled = "disabled" } })
            </div>
        </div>
    </div>

    <div class="row flex-row">
        <div class="card col-md-6">
            <div class="card-header">
                <h4 class="card-title">Multas <div class="vr"></div>  <i class="fas fa-file-invoice" style="margin-left:10px;"></i></h4>
            </div>
            <div class="card-body">
                @if (Model.Multas.Count() > 0)
                {
                    <table class="table table-hover table-responsive-sm">
                        <thead>
                            <tr>
                                <td>
                                    Codigo
                                </td>
                                <td>
                                    Valor
                                </td>
                                <td>
                                    Data da infração
                                </td>
                                <td>
                                    Motorista
                                </td>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (Multa item in Model.Multas)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.CodigoMulta)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Valor)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.DataDaMulta)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Motorista.Nome)
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                }
                else
                {
                    <div class="alert alert-info">Veiculo não possui multas registradas</div>
                }
            </div>
        </div>

        <div class="card col-md-6 col-sm-12">
            <div class="card-header">
                <h4 class="card-title">Sinistros <div class="vr"></div>  <i class="fas fa-car-crash" style="margin-left:10px;"></i></h4>
            </div>
            <div class="card-body">
                @if (Model.Sinistros.Count() > 0)
                {
                    <table class="table table-responsive-sm table-hover">
                        <thead>
                            <tr>
                                <td>
                                    Codigo
                                </td>
                                <td>
                                    Descrição
                                </td>
                                <td>
                                    Data do sinistro
                                </td>
                                <td>
                                    Motorista
                                </td>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (Sinistro item in Model.Sinistros)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.CodSinistro)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Descricao)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.DataSinistro)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Motorista.Nome)
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                }
                else
                {
                    <div class="alert alert-info">Veiculo não possui sinistros registrados</div>
                }
            </div>
        </div>
    </div>
}

@section styles{
    <link href="~/Content/DataTables/DataTables-1.10.20/css/dataTables.bootstrap4.min.css" rel="stylesheet" />
    <link href="~/Content/DataTables/DataTables-1.10.20/css/responsive.bootstrap4.min.css" rel="stylesheet" />
    <link href="~/Content/DataTables/DataTables-1.10.20/css/rowGroup.bootstrap4.min.css" rel="stylesheet" />
}

@section scripts{
    <script src="~/Content/DataTables/DataTables-1.10.20/js/jquery.dataTables.min.js"></script>
    <script src="~/Content/DataTables/DataTables-1.10.20/js/dataTables.bootstrap4.min.js"></script>
    <script src="~/Content/DataTables/DataTables-1.10.20/js/dataTables.responsive.min.js"></script>
    <script src="~/Content/DataTables/DataTables-1.10.20/js/responsive.bootstrap4.min.js"></script>
    <script src="~/Content/DataTables/DataTables-1.10.20/js/dataTables.rowGroup.min.js"></script>
    <script type="text/javascript">
        $(document).ready(function () { $('.table').DataTable({ responsive: true, rowGroup: { dataSrc: 3 }, autoWidth:false }); });
    </script>
}