@model IEnumerable<Modelo.Classes.Web.Solicitacao>

@{
    ViewBag.Title = "Solicitações";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@if (TempData["Message"] != null)
{
    <div class="alert alert-success">
        @TempData["Message"]
    </div>
}
<div class="card">
    <div class="card-header">
        <h2 class="card-title">Solicitações Enviadas</h2>
    </div>
    <div class="card-body">
        <table class="table table-hover table-responsive-sm">
            <thead>
                <tr>
                    <th>
                        Data da solicitação
                    </th>
                    <th>
                        Estado da Solicitacao
                    </th>
                    <th>
                        Data do processamento
                    </th>
                    <th>
                        Tipo de Item
                    </th>
                    <th>
                        Tipo de Solicitação
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @if (Model.Count() == 0)
                {
                    <tr>
                        <td class="text-danger" colspan="5">
                            Você não possui solicitações no momento
                        </td>
                    </tr>
                }
                else
                {
                    foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.DataDaSolicitacao)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Estado)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.DataProcessamento)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.TipoDeItem)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Tipo)
                            </td>
                            <td>
                                @Html.ActionLink("Remover", "Delete", new { id = item.SolicitacaoId }, new { @class = "btn btn-danger" })
                            </td>
                        </tr>
                    }
                }
            </tbody>
        </table>
    </div>
</div>

@section styles{
    <link href="~/Content/DataTables/DataTables-1.10.20/css/dataTables.bootstrap4.min.css" rel="stylesheet" />
    <link href="~/Content/DataTables/DataTables-1.10.20/css/responsive.bootstrap4.min.css" rel="stylesheet" />
    <link href="~/Content/DataTables/DataTables-1.10.20/css/rowGroup.bootstrap4.min.css" rel="stylesheet" />
}

@section scripts{
    @Scripts.Render("~/Scripts/JqueryMaskPlugin/jquery.mask.js")
    <script src="~/Content/DataTables/DataTables-1.10.20/js/jquery.dataTables.min.js"></script>
    <script src="~/Content/DataTables/DataTables-1.10.20/js/dataTables.bootstrap4.min.js"></script>
    <script src="~/Content/DataTables/DataTables-1.10.20/js/dataTables.responsive.min.js"></script>
    <script src="~/Content/DataTables/DataTables-1.10.20/js/responsive.bootstrap4.min.js"></script>
    <script src="~/Content/DataTables/DataTables-1.10.20/js/dataTables.rowGroup.min.js"></script>
    <script type="text/javascript">
        $(document).ready(function () { $('.table').DataTable({ responsive: true, rowGroup: { dataSrc: 1 },autoWidth: false }); });
    </script>
}