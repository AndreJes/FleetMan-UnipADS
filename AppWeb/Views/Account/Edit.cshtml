@model AppWeb.Models.ClienteUsuario.UsuarioEditViewModel

@{
    ViewBag.Title = "Alterar usuário/senha";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken();
    <div class="card">
        <div class="card-header">
            <h2 class="card-title">@ViewBag.Title <div class="vr"></div>  <i class="fas fa-edit" style="margin-left:10px;"></i></h2>
        </div>
        <div class="card-body">
            @Html.HiddenFor(model => model.UsuarioId)
            @if(@TempData["UserChangeError"] != null)
            {
                <div class="alert alert-danger">
                    @TempData["UserChangeError"]
                </div>
            }
            <div class="form-group form-inline">
                @Html.LabelFor(model => model.EmailAntigo, new { @class = "form-control col-md-3 col-sm-12 bg-secondary text-white" })
                @Html.EditorFor(model => model.EmailAntigo, new { htmlAttributes = new { @class = "form-control col-md-9 col-sm-12", disabled = "disabled" } })
                @Html.HiddenFor(model => model.EmailAntigo)
            </div>
            <div class="form-group form-inline">
                @Html.LabelFor(model => model.NovoEmail, new { @class = "form-control col-md-3 col-sm-12 bg-secondary text-white" })
                @Html.EditorFor(model => model.NovoEmail, new { htmlAttributes = new { @class = "form-control col-md-9 col-sm-12" } })
            </div>
            <hr />
            <div class="form-group form-inline">
                @Html.LabelFor(model => model.NovaSenha, new { @class = "form-control col-md-3 col-sm-12 bg-secondary text-white" })
                @Html.PasswordFor(model => model.NovaSenha, new { @class = "form-control col-md-9 col-sm-12" })
            </div>
            <div class="form-group">
                <div class="form-group form-inline">
                    @Html.LabelFor(model => model.SenhaAtual, new { @class = "form-control col-md-3 col-sm-12 bg-secondary text-white" })
                    @Html.PasswordFor(model => model.SenhaAtual, new { @class = "form-control col-md-9 col-sm-12" })
                </div>
                @Html.ValidationMessageFor(model => model.SenhaAtual, "", new { @class = "text-danger offset-md-3 col-sm-12" })
            </div>
        </div>
        <div class="card-footer">
            <input value="Alterar informações" type="submit" class="btn btn-success offset-md-3 col-md-3 col-sm-12" />
            @Html.ActionLink("Voltar para meu perfil", "Details", "Cliente", null, new { @class = "btn btn-warning col-md-3 col-sm-12" })
        </div>
    </div>
}